@page "/hatchs/create"
@attribute [Authorize(Roles = "Administrator, GameMaster")]

@using DigitalWorldOnline.Commons.Enums;
@using DigitalWorldOnline.Commons.ViewModel.Asset;

<MudPaper Style="overflow-x: hidden;
        padding: 20px;
        margin-top: 15px;">
    <Loader Loading="@Loading">
        <EditForm Model="@_hatch" OnValidSubmit="Create">
            <MudGrid>
                <MudItem xs="12" xl="12" sm="12">
                    <MudStack Row="true" Spacing="2">
                        <MudIcon Icon="@Icons.Material.Filled.Egg" Class="icon-title"></MudIcon>
                        <MudText Typo="Typo.h5"><b>New hatch config</b></MudText>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" xl="12" sm="12">
                </MudItem>

                <MudItem xs="6" xl="6" sm="6">
                    <MudSelect Label="Hatch grade"
                               Required
                               RequiredError="Required"
                               T="HatchTypeEnum"
                               For="@(() => _hatch.Type)"
                               @bind-Value="_hatch.Type">
                        <MudSelectItem T="HatchTypeEnum" Value="HatchTypeEnum.One">Level 1</MudSelectItem>
                        <MudSelectItem T="HatchTypeEnum" Value="HatchTypeEnum.Two">Level 2</MudSelectItem>
                        <MudSelectItem T="HatchTypeEnum" Value="HatchTypeEnum.Three">Level 3</MudSelectItem>
                        <MudSelectItem T="HatchTypeEnum" Value="HatchTypeEnum.Four">Level 4</MudSelectItem>
                        <MudSelectItem T="HatchTypeEnum" Value="HatchTypeEnum.Five">Level 5</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="6" xl="6" sm="6">
                    <MudNumericField @bind-Value="_hatch.SuccessChance"
                                     For="@(() => _hatch.SuccessChance)"
                                     Label="Success Chance"
                                     T="double"
                                     Variant="Variant.Outlined"
                                     Required
                                     RequiredError="Required"
                                     Min="1"
                                     Max="100" />
                </MudItem>
                
                <MudItem xs="6" xl="6" sm="6">
                    <MudNumericField @bind-Value="_hatch.BreakChance"
                                     For="@(() => _hatch.BreakChance)"
                                     Label="Break Chance"
                                     T="double"
                                     Variant="Variant.Outlined"
                                     Required
                                     RequiredError="Required"
                                     Min="0"
                                     Max="100" />
                </MudItem>

                <MudItem xs="12" xl="12" sm="12">
                </MudItem>

                <MudItem xs="12" xl="12" sm="12">
                    <MudStack Row="true" Spacing="2">
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" ButtonType="ButtonType.Submit">Create</MudButton>
                        <MudButton Color="Color.Inherit" Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Return">Cancel</MudButton>
                    </MudStack>
                </MudItem>
            </MudGrid>
        </EditForm>
    </Loader>
</MudPaper>